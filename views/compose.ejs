<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="postBody" cols="40" rows="5" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-lg btn-primary">publish</button>
</form>
